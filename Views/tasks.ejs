<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <!-- Display Flash Messages -->
    <% if (messages.length > 0) { %>
        <div class="flash-messages">
            <% messages.forEach(function(message) { %>
                <p><%= message %></p>
            <% }); %>
        </div>
    <% } %>
    <header class="bg-primary text-white text-center py-2">
        <div class="col"><h1>Task Manager</h1></div>
        <a href="/logout" class="btn btn-warning mt-1">Logout</a>
    </header>
    <div class="container mt-5">
        <h2 class="text-center">Your Tasks</h2>
        <form action="/tasks" method="POST" class="mb-4">
            <div class="form-group">
                <label for="title">Task Title:</label>
                <input type="text" class="form-control" id="title" name="title" required>
            </div>
            <div class="form-group">
                <label for="description">Task Description:</label>
                <textarea class="form-control" id="description" name="description" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add Task</button>
        </form>
        
        <ul class="list-group">
            <% tasks.forEach(task => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong><%= task.title %></strong><br>
                        <small><%= task.description %></small>
                    </div>
                    <div>
                        <form action="/tasks/<%= task._id %>/delete" method="POST" class="d-inline">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                        <a href="/tasks/<%= task._id %>/edit" class="btn btn-info btn-sm">Edit</a>

                        
                    </div>
                </li>
            <% }); %>
        </ul>

        
    </div>
</body>
</html>
